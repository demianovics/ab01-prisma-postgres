{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Nodemon",
            "type": "node",
            "request": "attach",
            "restart": true,
            "port": 9229,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Docker",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app",
            "address": "localhost",
            "port": 9229
          }
    ]
}